<!DOCTYPE html>
<html lang="en">
    <%- include('./particle/head.ejs') %>
<body>
    <%- include('./particle/checkfor.ejs') %>
    <%- include('./particle/header.ejs') %>
    <main class="container-fluid py-5">
        <div class="row normal-font">
            <form action="/addstudent" method="post" id="form" class="col-10 offset-1 tablestart container-fluid">
                <div class="row py-3">
                    <label for="lastname" class="col-3 text-center offset-1">Фамилия</label><input type="text" name="lastname" id="lastname" class="col-3 offset-4">
                    <div class="row col-1 gx-0 py-1">
                        <button  type="button" class="col-6 reset btn" id="reset"></button>
                    </div>
                </div>
                <div class="row py-3">
                    <label for="firstname" class="col-3 text-center offset-1">Имя</label><input type="text" name="firstname" id="firstname" class="col-3 offset-4">
                    <div class="row col-1 gx-0 py-1">
                        <button type="button" class="col-6 reset btn" id="reset"></button>
                    </div>
                </div>
                <div class="row py-3">
                    <label for="phone" class="col-3 text-center offset-1">Телефон</label><input type="tel" name="phone" id="phone" class="col-3 offset-4" placeholder="+998 (99) 999-99-99">
                    <div class="row col-1 gx-0 py-1">
                        <button type="button" class="col-4 reset btn" id="reset"></button>
                        <button type="button" class="col-4 offset-2 add btn" id="add"></button>
                    </div>
                </div>
                <div class="row py-3">
                    <label for="course" class="col-3 text-center offset-1">Курс</label>
                    <select id="course" name="course" class="col-3 offset-4"><% course.forEach(element => {%><option value="<%=element%>"><%=element%></option><%}); %>
                    <option value="etc">Бошка вариант</option>
                    </select>
                </div>
                <div class="row py-3">
                    <label for="adv" class="col-3 text-center offset-1">Реклама</label>
                    <select id="adv" name="adv" class="col-3 offset-4" >
                        <% Adver.forEach(element => {%><option value="<%=element%>"><%=element%></option><%}); %>
                        <option value="etc">Бошка вариант</option>
                    </select>
                </div>
                <div class="row py-3">
                    <label for="adress" class="col-3 text-center offset-1">Адресс</label><input type="text" name="adress" id="adress" class="col-3 offset-4">
                    <div class="row col-1 gx-0 py-1">
                        <button type="button" class="col-6 reset btn" id="reset"></button>
                    </div>
                </div>
                <div class="row py-3">
                    <label for="adress" class="col-3 text-center offset-1">Комментария</label><textarea type="text" name="comment" id="comment" class="col-3 offset-4"></textarea>
                    <div class="row col-1 gx-0 py-1">
                        <button type="button" class="col-6 reset btn" id="reset"></button>
                    </div>
                </div>
                <div class="row py-3">
                    <input type="button" value="Сохранить" id='btn' class="offset-4 col-4 p-2 btn btn-primary btn-lg">
                </div>
            </form>
        </div>
    </main>
    <script src="/script/form.js"></script>
</body>
</html>