<!DOCTYPE html>
<html lang="en">
    <%- include('./particle/head.ejs') %>
<body>
    <%- include('./particle/checkfor.ejs') %>
    <%- include('./particle/header.ejs') %>
    <% student = results[0] %>
    <% Phone = JSON.parse(student.Phone) %>
    <main class="container-fluid py-5">
        <div class="row normal-font">
            <form action="/edit/<%= student.ID %>?_method=PUT" method="post" id="form" class="col-10 offset-1 tablestart container-fluid">
                <div class="row py-3">
                    <label for="lastname" class="col-3 text-center offset-1">Фамилия</label><input type="text" name="lastname" id="lastname" class="col-3 offset-4" value="<%= student.LastName %>">
                    <div class="row col-1 gx-0 py-1">
                        <button  type="button" class="col-6 reset btn" id="reset"></button>
                    </div>
                </div>
                <div class="row py-3">
                    <label for="firstname" class="col-3 text-center offset-1">Имя</label><input type="text" name="firstname" id="firstname" class="col-3 offset-4" value="<%=student.FirstName %>">
                    <div class="row col-1 gx-0 py-1">
                        <button type="button" class="col-6 reset btn" id="reset"></button>
                    </div>
                </div>
                <div class="row py-3">
                    <label for="phone" class="col-3 text-center offset-1">Телефон</label><input type="tel" name="phone" id="phone" class="col-3 offset-4" placeholder="+998 (99) 999-99-99" value="<%= Phone[0] %>">
                    <div class="row col-1 gx-0 py-1">
                        <button type="button" class="col-4 reset btn" id="reset"></button>
                        <button type="button" class="col-4 offset-2 add btn" id="add"></button>
                    </div>
                </div>
                <% if(Phone[1]){ %>
                    <div class="row py-3">
                        <label class="col-3 text-center offset-1"><i>Телефон</i></label><input class="col-3 offset-4" type="text" placeholder="+998 (99) 999-99-99" name="phone2" value="<%= Phone[1] %>">
                        <div class="row col-1 gx-0 py-1">
                            <button class="col-4 reset btn" type="button"></button>
                            <button class="col-4 delete btn offset-2" type="button"></button>
                        </div>
                    </div>
                <% } %>
                <div class="row py-3">
                    <label for="course" class="col-3 text-center offset-1">Курс</label>
                    <% select = true %>
                    <select id="course" name="course" class="col-3 offset-4"><% course.forEach(element => {%>
                        <option value="<%=element%>" <% if(element == student.Course){%>selected<%select = false;}%>><%=element%></option><%}); %>
                        <option value="etc" <% if (select) { %>selected<% } %>>Бошка вариант</option>
                    </select>
                </div>
                <% if (select) { %>
                    <div class="row py-3">
                        <label class="col-3 text-center offset-1"><i>Курс</i></label>
                        <input class="col-3 offset-4" type="text" name="courseetc" value="<%= student.Course %>">
                        <div class="row col-1 gx-0 py-1">
                            <button class="col-4 reset btn" type="button"></button>
                        </div>
                    </div>
                <% } %>
                <% advselected = true %>
                <div class="row py-3">
                    <label for="adv" class="col-3 text-center offset-1">Реклама</label>
                    <select id="adv" name="adv" class="col-3 offset-4" >
                        <% Adver.forEach(element=>{%><option value="<%=element%>"<% if (element == student.Advertising) { %>selected<% advselected = false %><% } %>    
                            ><%=element%></option>
                        <%})%>
                        <option value="etc" <% if (advselected) { %>selected<% } %>>Бошка вариант</option>
                    </select>
                </div>
                <% if (advselected) { %>
                    <div class="row py-3">
                        <label class="col-3 text-center offset-1"><i>Реклама</i></label>
                        <input class="col-3 offset-4" type="text" name="advetc" value="<%=student.Advertising%>">
                        <div class="row col-1 gx-0 py-1">
                            <button class="col-4 reset btn" type="button"></button>
                        </div>
                    </div>
                <% } %>
                <div class="row py-3">
                    <label for="adress" class="col-3 text-center offset-1">Адресс</label><input type="text" name="adress" id="adress" class="col-3 offset-4" value="<%=student.Adress%>">
                    <div class="row col-1 gx-0 py-1">
                        <button type="button" class="col-6 reset btn" id="reset"></button>
                    </div>
                </div>
                <div class="row py-3">
                    <label for="adress" class="col-3 text-center offset-1">Комментария</label><textarea type="text" name="comment" id="comment" class="col-3 offset-4"><%=student.Comment%></textarea>
                    <div class="row col-1 gx-0 py-1">
                        <button type="button" class="col-6 reset btn" id="reset"></button>
                    </div>
                </div>
                <div class="row py-3">
                    <input type="button" value="Сохранить" id='btn' class="offset-4 col-4 p-2 btn btn-primary btn-lg">
                </div>
            </form>
        </div>
    </main>
    <script src="/script/form.js"></script>
</body>
</html>